{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "types": ["node"]
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "typings", "dist", "tests"],
  "filesGlob": ["./src/**/*.ts"]
}
