{
  "compilerOptions": {
    "module": "umd",
    "target": "es6",
    "declaration": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "sourceMap": true,
    "types": ["node", "core-js"],
    "lib": ["es5", "es2015"],
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "typings", "dist", "tests"],
  "filesGlob": ["./src/**/*.ts"]
}
