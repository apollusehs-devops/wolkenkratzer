{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "declaration": false,
        "allowJs": true,
        "outDir": "./dist",
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "pretty": true
    },
    "exclude": [
        "node_modules",
        "typings"
    ],
    "filesGlob": [
        "./src/**/*.js",
        "./src/**/*.ts",
        "!./node_modules/**/*",
        "!./src/**/*.d.ts"
    ],
    "files": [
        "./index.js"
    ]
}