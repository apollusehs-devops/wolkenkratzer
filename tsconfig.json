{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "declaration": true,
        "allowJs": false,
        "outDir": "./dist",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "types": ["node"]
    },
    "exclude": [
        "node_modules",
        "typings",
        "dist"
    ],
    "filesGlob": [
        "./src/*.ts",
        "./src/macros/*.ts",
        "!./node_modules/**/*"
    ],
    "files": [
        "./index.ts",
        "./src/resourceattribute.ts",
        "./src/types.ts",
        "./src/init.ts",
        "./src/util.ts",
        "./src/macros/ec2meta.macro.ts",
        "./src/macros/s3.macro.ts"
    ]
}