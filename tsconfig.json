{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "allowJs": false,
        "outDir": "./dist",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "typings",
        "dist",
        "src.old",
        "test"
    ],
    "filesGlob": [
        "./src/*.ts",
        "./src/macros/*.ts",
        "!./node_modules/**/*",
        "!./src/*.spec.ts"
    ]
}