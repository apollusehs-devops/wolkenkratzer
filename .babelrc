{
  "env": {
    "development": {
      "presets": [
        "flow",
        "stage-0",
        [
          "latest",
          {
            "es2015": {
              "modules": false
            }
          }
        ]
      ],
      "plugins": ["external-helpers"]
    },
    "test": {
      "sourceMaps": "inline",
      "presets": [
        "flow",
        "stage-0",
        "es2015",
        [
          "env",
          {
            "targets": {
              "node": "7"
            }
          }
        ]
      ]
    }
  }
}
